procedure TfrmCadastroUsuario.btnAdicionarClick(Sender: TObject);
begin
  inherited;
  dmUsuarios.cdsUsuarios.Close;
  dmUsuarios.cdsUsuarios.CommandText := 'select * from fx_usuario';
  dmUsuarios.cdsUsuarios.Open;
end;

